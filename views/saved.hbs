<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
	<a class="navbar-brand" href="/">Nintendo Scraper</a>
	<button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
		aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarColor01">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item">
				<a class="nav-link" href="/">Home
					<span class="sr-only">(current)</span>
				</a>
			</li>
			<li class="nav-item active">
				<a class="nav-link" href="/saved">My Saved Articles
					<span class="sr-only">(current)</span>
				</a>
			</li>
			<li class="nav-item">
				<a class="btn btn-danger clear">Clear Out Your Saved Articles</a>
			</li>
		</ul>
	</div>
</nav>
<div class="jumbotron text-center">
	<div class="overlay">
	</div>
	<div class="background-image">
	</div>
	<div class="caption">
		<h1>Saved Articles</h1>
		<p>My Saved Articles</p>
	</div>
</div>
<div class="container-fluid article-container">
	{{#each articles}}
	<div data-_id="{{_id}}" class="card">
		<div class="card-header">
			<h3>
				<a class="article-link" target="_blank" rel="noopener noreferrer" href="{{link}}">{{title}}</a>
				<a class="btn btn-success save">Save Article</a>
			</h3>
		</div>
		<div class="card-body">{{platform}}{{date}}</div>
	</div>
	{{/each}}
	{{#unless articles.length}}
	<div class="alert alert-warning text-center">
		<h4>Nothing here. It looks like you haven't any saved articles yet.</h4>
	</div>
	<div class="card">
		<div class="card-header text-center">
			<h3>Would You Like to Browse New Articles?</h3>
		</div>
		<div class="card-body text-center">
			<h4>
				<a href="/">Browse For New Articles</a>
			</h4>
		</div>
	</div>
	{{/unless}}
</div>

<footer class="footer">
	<div class="container">
		<p>Nintendo Scraper</p>
	</div>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
